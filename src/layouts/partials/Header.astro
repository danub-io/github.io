---
import menu from "@/config/menu.json";
import { IoSearch, IoClose } from "react-icons/io5";

export interface ChildNavigationLink { name: string; url: string; }
export interface NavigationLink { name: string; url: string; hasChildren?: boolean; children?: ChildNavigationLink[]; }
const { main }: { main: NavigationLink[] } = menu;
---

<header class="fixed top-0 w-full z-40 bg-body border-b border-gray-200 transition-all h-[76px] flex items-center">
  <nav class="w-full max-w-5xl mx-auto px-6 md:px-8 flex justify-between items-center">
    
    <div class="flex-1">
      <a href="/" class="text-xl sm:text-2xl font-primary font-bold tracking-tight text-dark transition hover:opacity-80">
        GospelReads<span class="text-primary">.</span>
      </a>
    </div>

    <div class="flex items-center space-x-5">
      <button class="text-dark hover:text-slate-600 transition cursor-pointer p-1" aria-label="search" data-search-trigger>
        <IoSearch class="text-2xl" />
      </button>

      <button id="mobile-menu-btn" class="cursor-pointer text-dark focus:outline-none p-1 z-50 relative" aria-label="Toggle Menu">
        <svg id="icon-open" class="w-7 h-7 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="icon-close" class="w-7 h-7 hidden transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div id="mobile-menu-dropdown" class="absolute top-[76px] left-0 w-full bg-white border-b border-gray-200 shadow-xl flex-col px-6 py-8 hidden transform origin-top transition-all duration-300">
      <div class="max-w-5xl mx-auto w-full">
        <div class="space-y-4 mb-8">
          {main.map((menu) => (
            <a href={menu.url} class="block text-xl font-primary font-semibold text-dark hover:text-slate-600 border-b border-gray-100 pb-4">{menu.name}</a>
          ))}
        </div>
        <a href="/#assinar" class="block text-center w-full sm:w-auto sm:inline-block bg-dark hover:bg-black text-white px-8 py-4 rounded-none font-medium shadow-md transition">
          Apoiar a Missão
        </a>
      </div>
    </div>
  </nav>
</header>

<div class="fixed inset-0 z-[60] flex items-start justify-center pt-[15vh] px-4 sm:px-6 opacity-0 invisible transition-all duration-300" id="search-modal">
  <div class="absolute inset-0 bg-dark/60 backdrop-blur-md cursor-pointer transition-opacity" id="search-backdrop" aria-label="Fechar busca"></div>
  
  <div class="relative w-full max-w-3xl bg-white rounded-none shadow-[0_20px_60px_rgba(0,0,0,0.3)] transform scale-95 transition-all duration-300 z-10" id="search-container">
    <form action="/search" method="GET" class="relative flex items-center p-1 sm:p-2">
      <span class="absolute left-4 sm:left-6 text-gray-400 text-xl sm:text-2xl"><IoSearch /></span>
      <input class="w-full bg-transparent py-4 sm:py-6 pl-12 pr-12 sm:pl-16 sm:pr-16 text-lg sm:text-2xl font-primary text-dark placeholder:text-gray-400 border-0 focus:ring-0 outline-none" placeholder="O que você busca hoje?" type="text" name="q" id="search-input-desktop" autocomplete="off" />
      <button type="button" class="absolute right-4 sm:right-6 text-gray-400 hover:text-dark transition cursor-pointer" id="search-close"><IoClose class="text-2xl sm:text-3xl" /></button>
    </form>
  </div>
</div>

<script is:inline>
  (function() {
    let onKeyDown;

    function initNav() {
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu-dropdown');
      const iconOpen = document.getElementById('icon-open');
      const iconClose = document.getElementById('icon-close');

      if(btn && menu) {
        // Remove existing listener if any to avoid duplicates
        const newBtn = btn.cloneNode(true);
        btn.parentNode.replaceChild(newBtn, btn);
        newBtn.addEventListener('click', function() {
          menu.classList.toggle('hidden');
          menu.classList.toggle('flex');
          iconOpen.classList.toggle('hidden');
          iconClose.classList.toggle('hidden');
        });
      }

      const searchModal = document.getElementById('search-modal');
      const searchContainer = document.getElementById('search-container');
      const searchInput = document.getElementById('search-input-desktop');
      const searchTriggers = document.querySelectorAll('[data-search-trigger]');
      const searchClose = document.getElementById('search-close');
      const searchBackdrop = document.getElementById('search-backdrop');

      const openSearch = function(e) {
        e.preventDefault();
        if (searchModal) {
          searchModal.classList.remove('invisible', 'opacity-0');
          searchModal.classList.add('visible', 'opacity-100');
        }
        if (searchContainer) {
          searchContainer.classList.remove('scale-95');
          searchContainer.classList.add('scale-100');
        }
        setTimeout(function() { if (searchInput) searchInput.focus(); }, 100);
      };

      const closeSearch = function() {
        if (searchModal) {
          searchModal.classList.remove('visible', 'opacity-100');
          searchModal.classList.add('invisible', 'opacity-0');
        }
        if (searchContainer) {
          searchContainer.classList.remove('scale-100');
          searchContainer.classList.add('scale-95');
        }
      };

      searchTriggers.forEach(function(t) { t.addEventListener('click', openSearch); });
      if (searchClose) searchClose.addEventListener('click', closeSearch);
      if (searchBackdrop) searchBackdrop.addEventListener('click', closeSearch);

      // Properly manage keydown listener reference
      if (onKeyDown) {
        document.removeEventListener('keydown', onKeyDown);
      }
      onKeyDown = function(e) { if (e.key === 'Escape') closeSearch(); };
      document.addEventListener('keydown', onKeyDown);
    }

    // Always init on load
    initNav();
    // Re-init on page load if Astro View Transitions are used (failsafe)
    document.addEventListener('astro:page-load', initNav);
  })();
</script>
