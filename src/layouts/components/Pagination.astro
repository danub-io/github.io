---
const { section, currentPage, totalPages } = Astro.props;
const isMainFeed = section === "" || section === undefined;

const indexPageLink = currentPage === 2;
const hasPrevPage = currentPage > 1;
const hasNextPage = totalPages > currentPage;

let pageList = [];
for (let i = 1; i <= totalPages; i++) {
  pageList.push(i);
}
---

{
  totalPages > currentPage && (
    <div class="flex justify-center mt-12 mb-16">
      {isMainFeed && currentPage === 4 ? (
        <a
          href="/page/5"
          class="bg-[#0077B5] hover:bg-[#005a8a] text-white px-6 py-1 font-bold text-base uppercase tracking-widest transition-all duration-300 shadow-md hover:shadow-xl active:scale-95 flex items-center gap-2"
        >
          <span>Ver Mais Postagens</span>
          <svg class="w-5 h-5 animate-bounce-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </a>
      ) : (
        <button
          id="load-more-button"
          data-current-page={currentPage}
          data-total-pages={totalPages}
          data-section={section || ""}
          class="bg-[#0077B5] hover:bg-[#005a8a] text-white px-6 py-1 font-bold text-base uppercase tracking-widest transition-all duration-300 shadow-md hover:shadow-xl active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
        >
          <span class="button-text">Ver Mais Postagens</span>
          <svg class="w-5 h-5 animate-bounce-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
      )}
    </div>
  )
}

<style>
  .auto-loading {
    visibility: hidden;
    height: 40px; /* Give it some height so it's not immediately triggered by previous content */
    margin-top: 2rem;
  }
</style>

<script is:inline>
  (function() {
    function setupLoadMore() {
      const button = document.getElementById('load-more-button');
      if (!button || button.hasAttribute('data-initialized')) return;
      button.setAttribute('data-initialized', 'true');

      let currentPage = parseInt(button.getAttribute('data-current-page') || '1');
      const totalPages = parseInt(button.getAttribute('data-total-pages') || '1');
      const section = button.getAttribute('data-section') || '';

      const shouldAutoLoad = () => {
        const isMainFeed = section === '';
        return isMainFeed && (currentPage < 4 || currentPage >= 5);
      };

      const updateButtonStyle = () => {
        const textSpan = button.querySelector('.button-text');
        const svg = button.querySelector('svg');

        if (shouldAutoLoad()) {
          button.parentElement?.classList.add('auto-loading');
          if (textSpan) textSpan.textContent = 'Carregando mais...';
          if (svg) svg.style.display = 'none';
        } else {
          button.parentElement?.classList.remove('auto-loading');
          if (textSpan) textSpan.textContent = 'Ver Mais Postagens';
          if (svg) svg.style.display = 'block';
        }
      };

      updateButtonStyle();

      const loadMore = async () => {
        if (button.getAttribute('disabled')) return;

        if (currentPage === 4 && section === '') {
          window.location.href = '/page/5';
          return;
        }

        button.setAttribute('disabled', 'true');
        const textSpan = button.querySelector('.button-text');
        if (textSpan) textSpan.textContent = 'Carregando...';

        const nextPage = currentPage + 1;
        const url = section ? `/${section}/page/${nextPage}` : `/page/${nextPage}`;

        try {
          const response = await fetch(url);
          if (!response.ok) throw new Error('Falha ao carregar mais postagens');

          const html = await response.text();
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');

          const postsContainer = document.querySelector('#posts-container .grid');
          const newPostsContainer = doc.querySelector('#posts-container .grid');

          if (postsContainer && newPostsContainer) {
            const fragment = document.createDocumentFragment();
            const newPosts = Array.from(newPostsContainer.children);
            newPosts.forEach(post => {
              fragment.appendChild(post);
            });
            postsContainer.appendChild(fragment);

            const paginationContainer = button.closest('.flex.justify-center.mt-12.mb-16');
            const newPaginationContainer = doc.querySelector('.flex.justify-center.mt-12.mb-16');

            if (paginationContainer && newPaginationContainer) {
              paginationContainer.replaceWith(newPaginationContainer);
              setupLoadMore();
            } else if (paginationContainer) {
              paginationContainer.remove();
            }
          }
        } catch (error) {
          console.error(error);
          const textSpan = button.querySelector('.button-text');
          if (textSpan) textSpan.textContent = 'Erro ao carregar. Tente novamente.';
          button.removeAttribute('disabled');
        }
      };

      button.addEventListener('click', loadMore);

      const observer = new IntersectionObserver((entries) => {
        if (entries[0].isIntersecting && shouldAutoLoad() && !button.getAttribute('disabled')) {
          setTimeout(() => {
            if (entries[0].isIntersecting) loadMore();
          }, 100);
        }
      }, { rootMargin: '0px' });

      observer.observe(button);
    }

    setupLoadMore();
    document.addEventListener('astro:page-load', setupLoadMore);
  })();
</script>
