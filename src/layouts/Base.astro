---
import TwSizeIndicator from "@/components/TwSizeIndicator.astro";
import config from "@/config/config.json";
import theme from "@/config/theme.json";
import { plainify } from "@/lib/utils/textConverter";
import Footer from "@/partials/Footer.astro";
import Header from "@/partials/Header.astro";
import BackToTop from "@/components/BackToTop.astro";
import "@/styles/main.css";
import {
  GoogleTagmanager,
  GoogleTagmanagerNoscript,
} from "@digi4care/astro-google-tagmanager";
import { AstroFont } from "astro-font";

export interface Props {
  title?: string;
  meta_title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  canonical?: string;
  author?: string;
  date?: any;
}

const { title, meta_title, description, image, noindex, canonical, author, date } = Astro.props;
const meta_author = author || config.metadata.meta_author;
const meta_description = plainify(description ? description : config.metadata.meta_description);
const site_url = config.site.base_url;
const meta_image = image || config.metadata.meta_image;

let og_image = "";
if (typeof meta_image === "string") {
  og_image = meta_image.startsWith("http") ? meta_image : `${site_url}${meta_image}`;
} else if (meta_image && typeof meta_image === "object" && "src" in meta_image) {
  og_image = (meta_image as any).src.startsWith("http") ? (meta_image as any).src : `${site_url}${(meta_image as any).src}`;
}

const schema = {
  "@context": "https://schema.org",
  "@type": date ? "BlogPosting" : "WebPage",
  "headline": plainify(meta_title || title || config.site.title),
  "description": meta_description,
  "image": og_image,
  "author": {
    "@type": "Person",
    "name": meta_author,
    "url": `${site_url}/sobre`
  },
  "publisher": {
    "@type": "Organization",
    "name": config.site.title,
    "logo": {
      "@type": "ImageObject",
      "url": `${site_url}${config.site.logo}`
    }
  },
  "url": `${site_url}${Astro.url.pathname}`
};

if (date) {
  schema["datePublished"] = new Date(date).toISOString();
}
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
<script is:inline>
  (function() {
    var gtmLoaded = false;
    function loadGTM() {
      if (gtmLoaded) return;
      gtmLoaded = true;
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-PJ33ZTZW');
    }
    ['touchmove','touchstart','scroll'].forEach(function(e) {
      window.addEventListener(e, loadGTM, {passive: true, once: true});
    });
    window.addEventListener('load', function() {
      setTimeout(loadGTM, 5000);
    });
  })();
</script>
    <AstroFont
      config={[
        {
          src: [],
          name: "Playfair Display",
          googleFontsURL: 'https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap',
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "serif",
        },
        {
          src: [],
          name: "Inter",
          googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap',
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />

    <link rel="icon" type="image/svg+xml" href={config.site.favicon} />
    <meta name="theme-name" content="gospelreads-premium" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#f8fafc" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0f172a" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />
    <title>{plainify(meta_title ? meta_title : title ? title : config.site.title)}</title>
    {canonical && <link rel="canonical" href={canonical} item-prop="url" />}
    {noindex && <meta name="robots" content="noindex,nofollow" />}
    <meta name="description" content={meta_description} />
    <meta name="author" content={meta_author} />
    <meta property="og:title" content={plainify(meta_title ? meta_title : title ? title : config.site.title)} />
    <meta property="og:description" content={meta_description} />
    <meta property="og:type" content={date ? "article" : "website"} />
    <meta property="og:url" content={`${site_url}${Astro.url.pathname}`} />
    <meta name="twitter:title" content={plainify(meta_title ? meta_title : title ? title : config.site.title)} />
    <meta name="twitter:description" content={meta_description} />
    <meta property="og:image" content={og_image} />
    <meta name="twitter:image" content={og_image} />
    <meta name="twitter:card" content="summary_large_image" />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body class="bg-body text-text font-secondary antialiased selection:bg-primary selection:text-white flex flex-col min-h-screen pt-[72px]">
    <TwSizeIndicator />
    <Header />
    <BackToTop />
    <main id="main-content" class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
