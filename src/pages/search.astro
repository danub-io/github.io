---
import Base from "@/layouts/Base.astro";
import SearchBar from "@/helpers/SearchBar";
import { getSinglePage } from "@/lib/contentParser.astro";

// Recuperar todos os posts para alimentar o motor de busca
const posts = await getSinglePage("posts");

// Preparar a lista no formato que o SearchBar.tsx espera
const searchList = posts.map((post) => ({
  slug: post.id,
  data: post.data,
  content: post.body,
}));
---

<Base title="Pesquisa">
  <section class="py-6">
    <div class="max-w-[1000px] px-4 mx-auto">
      <h1 class="h2 mb-8 text-center">Resultados da Pesquisa</h1>
      <SearchBar client:load searchList={searchList} />
    </div>
  </section>
</Base>