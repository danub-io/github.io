---
import Base from "@/layouts/Base.astro";
import SearchBar from "@/helpers/SearchBar";
import { getSinglePage } from "@/lib/contentParser.astro";

// Recuperar todos os posts para alimentar o motor de busca
const posts = await getSinglePage("posts");

// Preparar a lista no formato que o SearchBar.tsx espera
const searchList = posts.map((post) => ({
  slug: post.id,
  data: post.data,
  content: post.body,
}));
---

<Base title="Pesquisa">
  <section class="max-w-5xl mx-auto px-4 sm:px-6 py-20 min-h-[80vh]">
    <div class="w-full">
      <h1 class="h2 mb-12 text-center">Resultados da Pesquisa</h1>
      <SearchBar client:load searchList={searchList} />
    </div>
  </section>
</Base>