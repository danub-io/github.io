---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize, slugify } from "@/lib/utils/textConverter";

const tags = await getTaxonomy("posts", "tags");
---

<Base title="Tags - Índice de Assuntos">
  <section class="py-20 md:py-32 bg-body min-h-[80vh]">
    <div class="max-w-5xl mx-auto px-6 md:px-8">
      
      <div class="text-center mb-16 md:mb-24">
        <span class="text-primary font-bold tracking-[0.2em] text-xs uppercase mb-4 block">Índice Geral</span>
        <h1 class="font-primary text-5xl md:text-6xl font-bold text-dark mb-6">Tags & Assuntos</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">Uma visão microscópica de todos os temas abordados nas postagens.</p>
      </div>

      <div class="max-w-4xl mx-auto">
        <ul class="flex flex-wrap justify-center gap-4 md:gap-5">
          {tags.map((tag) => (
            <li>
              <a href={`/tags/${slugify(tag)}`} class="block bg-white border border-gray-200 text-gray-600 px-6 py-3 rounded-full font-medium hover:bg-dark hover:text-white hover:border-dark shadow-sm transition-all duration-300">
                #{humanize(tag)}
              </a>
            </li>
          ))}
        </ul>
      </div>

    </div>
  </section>
</Base>

