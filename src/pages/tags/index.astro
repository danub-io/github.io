---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize } from "@/lib/utils/textConverter";
import { FaTags } from "react-icons/fa6";

const tags = await getTaxonomy("posts", "tags");
---
<Base title="Tags">
  <section class="py-6">
    <div class="max-w-[804px] px-4 md:px-0 mx-auto text-center">
      <h1 class="h2 mb-12 text-center font-bold leading-10 after:mx-auto after:mt-4 after:block after:h-1 after:w-10 after:rounded-full after:bg-primary after:content-['']">Todas as Tags</h1>
      <ul class="space-x-4">
        {tags.map((tag) => (
          <li class="inline-block my-2">
            <a href={`/tags/${tag}`} class="rounded-lg bg-light px-4 py-2 text-dark transition hover:bg-primary hover:text-white flex items-center group">
              <FaTags className="mr-2 text-primary group-hover:text-white transition h-4 w-4" />
              {humanize(tag || "")}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </section>
</Base>