---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize, slugify } from "@/lib/utils/textConverter";

const tags = await getTaxonomy("posts", "tags");
---

<Base title="Tags - Índice de Assuntos">
  <section class="max-w-5xl mx-auto px-4 sm:px-6 py-10 mb-10 min-h-[80vh]">
    <div class="mb-12 border-b border-gray-200 pb-6">
      <h2 class="font-primary text-3xl sm:text-4xl font-bold text-dark">Tags & Assuntos</h2>
      <p class="text-text mt-2">Uma visão microscópica de todos os temas abordados nas postagens.</p>
    </div>

    <ul class="flex flex-wrap gap-3 md:gap-4">
      {tags.map((tag) => (
        <li>
          <a href={`/tags/${slugify(tag)}`} class="block bg-white border border-gray-200 text-slate-600 px-5 py-2.5 rounded-lg font-medium hover:bg-dark hover:text-white hover:border-dark shadow-sm transition-all duration-300">
            #{humanize(tag)}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Base>