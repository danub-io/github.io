---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize, slugify } from "@/lib/utils/textConverter";
import { getSinglePage } from "@/lib/contentParser.astro";

const categories = await getTaxonomy("posts", "categories");
const posts = await getSinglePage("posts");
---

<Base title="Categorias - Explorar por Temas">
  <section class="py-20 md:py-32 bg-body min-h-[80vh]">
    <div class="max-w-5xl mx-auto px-6 md:px-8">
      
      <div class="text-center mb-16 md:mb-24">
        <span class="text-primary font-bold tracking-[0.2em] text-xs uppercase mb-4 block">Arquivo Editorial</span>
        <h1 class="font-primary text-5xl md:text-6xl font-bold text-dark mb-6">Explorar por Temas</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">Navegue pelas disciplinas que moldam nossa mentalidade e lideran√ßa.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => {
          const count = posts.filter((p) => p.data.categories?.map((c: string) => slugify(c)).includes(slugify(category))).length;
          return (
            <a href={`/categorias/${slugify(category)}`} class="group bg-white border border-gray-100 p-8 md:p-10 rounded-2xl shadow-[0_4px_20px_rgb(0,0,0,0.03)] hover:shadow-xl hover:border-primary/40 transition-all duration-300 flex flex-col items-center text-center">
              <h3 class="font-primary text-2xl font-bold text-dark group-hover:text-primary transition-colors mb-3">{humanize(category)}</h3>
              <span class="text-gray-400 text-sm font-medium tracking-wide">{count} {count === 1 ? 'Ensaio' : 'Ensaios'}</span>
            </a>
          );
        })}
      </div>

    </div>
  </section>
</Base>
