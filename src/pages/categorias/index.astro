---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize, slugify } from "@/lib/utils/textConverter";
import { getSinglePage } from "@/lib/contentParser.astro";

const categories = await getTaxonomy("posts", "categories");
const posts = await getSinglePage("posts");
---

<Base title="Categorias - Explorar por Temas">
  <section class="max-w-5xl mx-auto px-4 sm:px-6 py-10 mb-10 min-h-[80vh]">
    <div class="mb-12 border-b border-gray-200 pb-6">
      <h2 class="font-primary text-3xl sm:text-4xl font-bold text-dark">Explorar por Temas</h2>
      <p class="text-text mt-2">Navegue pelas disciplinas que moldam nossa mentalidade e lideran√ßa.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8">
      {categories.map((category) => {
        const count = posts.filter((p) => p.data.categories?.map((c: string) => slugify(c)).includes(slugify(category))).length;
        return (
          <a href={`/categorias/${slugify(category)}`} class="group bg-white border border-gray-100 p-6 sm:p-8 rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 flex flex-col items-center text-center">
            <h3 class="font-primary text-xl font-bold text-dark group-hover:text-slate-600 transition-colors mb-2">{humanize(category)}</h3>
            <span class="text-slate-500 text-sm font-medium tracking-wide">{count} {count === 1 ? 'Postagem' : 'Postagens'}</span>
          </a>
        );
      })}
    </div>
  </section>
</Base>