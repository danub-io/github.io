---
import Base from "@/layouts/Base.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize } from "@/lib/utils/textConverter";

const categories = await getTaxonomy("posts", "categories");

import { BiCategoryAlt } from "react-icons/bi";
---

<Base title={"Categories"}>
  <section class="py-6">
    <div class="max-w-[804px] px-4 md:px-0 mx-auto text-center">
      <h1 class="h2 mb-12 text-center font-bold leading-10 after:mx-auto after:mt-4 after:block after:h-1 after:w-10 after:rounded-full after:bg-primary after:content-['']">Categorias</h1>
      <ul class="space-x-4">
        {
          categories.map((category) => (
            <li class="inline-block">
              <a
                href={`/categorias/${category}`}
                class="rounded-lg bg-light px-4 py-2 text-dark transition hover:bg-primary hover:text-white flex items-center group"
              >
                <BiCategoryAlt className="mr-1 text-primary group-hover:text-white transition h-6 w-6 scale-75" />
                {humanize(category || "")}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
